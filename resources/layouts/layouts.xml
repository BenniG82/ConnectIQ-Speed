<layouts>
	<!-- A generic, centered layout. -->
	<layout id="Edge1kSmall">
		<drawable class="Background" />
		<label id="label" x="center" y="5" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_TINY" />
		<label id="value" x="80" y="center" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_RIGHT" font="Gfx.FONT_NUMBER_MEDIUM" />
		<drawable id="arrows" class="ArrowContainer">
			<param name="offsetY">5</param>
		</drawable>
	</layout>
	<layout id="Edge1kMedium">
		<drawable class="Background" />
		<label id="label" x="center" y="5" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_MEDIUM" />
		<label id="value" x="center" y="center" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_NUMBER_MEDIUM" />
		<drawable id="arrows" class="ArrowContainer">
			<param name="offsetY">0</param>
		</drawable>
	</layout>
	<layout id="Edge1kBig">
		<drawable class="Background" />
		<label id="label" x="center" y="5" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_MEDIUM" />
		<label id="value" x="center" y="center" color="Gfx.COLOR_BLACK" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_NUMBER_HOT" />
		<drawable id="arrows" class="ArrowContainer">
			<param name="offsetY">10</param>
		</drawable>
	</layout>
</layouts>
